    lturn();
    fsquares(2);
    rturn();
    fsquaresflip(2.4);
    bsquares(1);
    lturn();
    fsquares(1);
    rturn();
    fsquares(1);
    rturn();
    fsquaresflip(2);
    bsquares(2);
    lturn();
    fsquares(1);
    rturn();
    fsquaresplat(1.5);
   
    
